{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "app_name": {
            "type": "String"
        },
        "docker_image": {
            "type": "String"
        },
        "app_serviceplan": {
            "type": "String"
        },
        "hostname": {
            "type": "string"
        },
        "service": {
            "type": "string"
        },
        "environment": {
            "type": "string"
        },
        "keyVaultId": {
            "type": "string"
        },
        "keyVaultCertName": {
            "type": "string"
        }
    },
    "variables": {
        "tags": {
            "Service": "[parameters('service')]",
            "Environment": "[parameters('environment')]"
        }
    },
    "resources": [
        {
            "comments": "Template sets up an azure appservice with a docker image",
            "type": "Microsoft.Web/sites",
            "kind": "app,linux,container",
            "name": "[parameters('app_name')]",
            "apiVersion": "2016-08-01",
            "location": "UK West",
            "scale": null,
            "properties": {
                "enabled": true,
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('app_serviceplan'))]"
            }
        },
        {
            "type": "Microsoft.Web/sites/config",
            "name": "[concat(parameters('app_name'), '/web')]",
            "apiVersion": "2016-08-01",
            "location": "UK West",
            "scale": null,
            "properties": {
                "numberOfWorkers": 1,
                "linuxFxVersion": "[concat('DOCKER|', parameters('docker_image'))]",
                "alwaysOn": true,
                "httpsOnly": true,
                "httpLoggingEnabled": true,
                "logsDirectorySizeLimit": 35
            }
        },
        {
            "type": "Microsoft.Web/certificates",
            "name": "[parameters('keyVaultCertName')]",
            "apiVersion": "2016-03-01",
            "location": "[resourceGroup().location]",
            "tags": "[variables('tags')]",
            "properties":{
                "keyVaultId": "[parameters('keyVaultId')]",
                "keyVaultSecretName": "[parameters('keyVaultCertName')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', parameters('app_name'))]"
            }
        },
        {
            "type":"Microsoft.Web/sites/hostnameBindings",
            "name":"[concat(parameters('app_name'), '/', parameters('hostname'))]",
            "apiVersion":"2016-03-01",
            "location":"[resourceGroup().location]",
            "properties":{
                "sslState": "SniEnabled",
                "thumbprint":"[reference(resourceId('Microsoft.Web/certificates', parameters('keyVaultCertName'))).Thumbprint]"
            },
            "dependsOn": [
                "[concat('Microsoft.Web/certificates/', parameters('keyVaultCertName'))]"
            ]
        }
    ]
}
